
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <link href="~/Public/icon/icon_code_web/fontawesome-free-5.15.3-web/css/all.min.css" rel="stylesheet" />
    <link href="~/Public/css/css_dang_nhap.css" rel="stylesheet" />
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div id="form1" runat="server">
        <div class="app">
            <div class="backgroud" style="background: url(/Public/img/main-background1.jpg)">
                <div class="form" style="width: 580px">
                    <a class="trovetrangchu" href="../../"><i class="fas fa-home"></i></a>
                    <div class="tieude" style="height:50px">

                        <h1>Đăng Kí</h1>
                    </div>
                    <form id="form_dk">

                        <div style="position:relative" class="tai_khoan">
                            <i class="icon fas fa-user"></i>
                            <input onclick="an()" name="username" placeholder="UserName" class="txt" ID="txt_username" runat="server" />

                        </div>

                        <div style="position:relative" class="tai_khoan">
                            <i class="icon fas fa-lock"></i>
                            <input onclick="an()" name="password" placeholder="Mật Khẩu" type="password" class="txt" ID="txt_password" runat="server" />

                        </div>


                        <div style="position:relative" class="tai_khoan">
                            <i class="icon fas fa-lock"></i>
                            <input onclick="an()" name="nhaplai" placeholder="Nhập Lại Mật Khẩu" type="password" class="txt" ID="txt_password_kt" runat="server" />

                        </div>

                        <div style="position:relative" class="tai_khoan">
                            <i class="icon fas fa-user-edit"></i>
                            <input onclick="an()" name="ho" placeholder="Họ Và Tên Lót" class="txt" ID="txt_lastname" runat="server" />

                        </div>

                        <div style="position:relative" class="tai_khoan">
                            <i class="icon fas fa-user-edit"></i>
                            <input onclick="an()" name="ten" placeholder="Tên" class="txt" ID="txt_firstname" runat="server" />

                        </div>

                        <div style="position:relative" class="tai_khoan">
                            <i class="icon fas fa-map-marked"></i>
                            <input onclick="an()" name="diachi" placeholder="Địa chỉ" class="txt" ID="txt_address" runat="server" />

                        </div>

                        <div style="position:relative" class="tai_khoan">
                            <i class="icon fas fa-birthday-cake"></i>
                            <input onclick="an()" name="ngaysinh" type="date" class="txt" ID="txt_dayofbirth" runat="server" />

                        </div>

                        <div style="position:relative" class="tai_khoan">
                            <i class="icon fas fa-mobile-alt"></i>
                            <input onclick="an()" name="dienthoai" placeholder="Số Điện Thoại" class="txt" ID="txt_numberphone" type="number" />

                        </div>
                        <div id="tb_tong" style="text-align: end;margin-right: 8px;font-size: 18px"></div>
                        <div class="btn_dangNhap">
                            <a  href="~/Authentication/login"><button style="text-decoration:none;color:red;width:160px" type="button" class="btn_dang_nhap_admin" ID="bt_huy">Đăng Nhập </button></a>
                            <button type="submit" class="btn_dang_nhap_admin" ID="btn_dangki">Đăng Kí</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Public/Bootrap Jquery/Jquery/jquery.js"></script>
    <script src="~/Public/Bootrap Jquery/Jquery/jquery.validate.js"></script>
    <script src="~/Areas/Authentication/Public/js/register.js"></script>
</body>
</html>
